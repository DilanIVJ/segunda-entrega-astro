import "../styles/globals.css";
---
<footer class="fixed bottom-0 left-0 right-0 z-40 bg-white/90 dark:bg-slate-900/80 backdrop-blur border-t border-slate-200/60 dark:border-slate-700/60">
  <div class="container py-3 grid grid-cols-3 items-center">
    <!-- Izquierda: Logo -->
    <div class="flex items-center gap-2">
      <img src="/images/logo.png" alt="SodaBlog" class="w-7 h-7 object-contain" />
    </div>
    <!-- Centro: Texto -->
    <div class="text-center text-sm opacity-90">
      © 2025 SodaBlog — todos los derechos reservdadoos.
    </div>
    <!-- Derecha: Iconos ) -->
    <div class="flex items-center justify-end gap-3 opacity-80">
    
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
        <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
        <circle cx="17.5" cy="6.5" r="0.5"></circle>
      </svg>
      
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
      </svg>
      
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path d="M4 4l16 16M20 4L4 20"></path>
      </svg>
    </div>
  </div>
</footer>
